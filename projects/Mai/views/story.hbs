<div class="mai-separator-2"></div>

<div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2 xl6 offset-xl3">
        <h1 class="mai-attacher-1">{{this.title}}</h1>
        <h2>by {{writer.fullname}}</h2>

        <div class="mai-separator-3"></div>
        
        {{#each photos}}
        <div class="card" id="card{{@index}}">
            <div class="card-image mai-card">
                <img src="{{this.url}}">
            </div>

            <div class="card-content">
                <p>{{this.caption}}</p>
            </div>
        </div>

        <div class="mai-separator-3"></div>
        {{/each}}
    </div>
</div>

<form action="/profile_{{writer.id}}" method="GET">
    <div class="row">
        <div class="col s10 offset-s1 m8 offset-m2 xl6 offset-xl3">
            <button type="submit" class="btn-large waves-effect waves-light" title="Click to go back.">Return to profile</button>
        </div>
    </div>

    <div class="mai-separator-3"></div>
</form>